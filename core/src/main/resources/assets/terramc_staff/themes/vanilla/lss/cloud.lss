Button {
  width: 70;
}

.not-connected-info {
  alignment-x: center;
  top: 40vh;
  text-color: dark_red;
}

.connect-text {
  alignment-x: center;
  top: 45vh;
  text-color: red;
}

.connect-btn {
  alignment-x: center;
  top: 50vh;
}

.container {
  top: 0;
  bottom: 25;
  left: 5;
  right: 5;
  box-shadow: classic left top right bottom;
  renderer: "DirtBackground";

  .header {
      top: 0;
      left: 0;
      right: 0;
      height: 25;
      background-color: rgba(85, 255, 85, 0.2);

      .header-text {
        alignment-x: center;
        alignment-y: center;
      }

    }

}

Scroll {
   top: 30;
   bottom: 10;
   width: 100%;

   .grid-control {
      top: 0;
      left: 0;
      height: fit-content;
      width: 100%;
      tiles-per-line: 6;
      tile-height: 70;
   }

   Scrollbar {
      left: 0;
      top: 0;
      width: 5;
      height: 100%;
   }
}

CloudControl {

  .control-container {
    alignment-x: center;
    top: 0;
    width: 80;
    height: 100%;
  }

  .title {
    top: 0;
    alignment-x: center;
  }

  .restartBtn {
    top: 15;
    alignment-x: center;
  }

  .maintenanceBtn {
    top: 40;
    alignment-x: center;
  }

}