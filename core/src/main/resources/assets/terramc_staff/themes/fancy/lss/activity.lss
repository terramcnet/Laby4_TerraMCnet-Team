@import super();

Button {
  width: 90;
  padding-left: 2;
  padding-right: 2;
}

.not-connected-info {
  alignment-x: center;
  top: 40vh;
  text-color: dark_red;
}

.connect-text {
  alignment-x: center;
  top: 45vh;
  text-color: red;
}

.connect-btn {
  alignment-x: center;
  top: 50vh;
}

.api-error {
  alignment-x: center;
  top: 45vh;
  text-color: red;
}

.api-error-reason {
  alignment-x: center;
  top: 50vh;
}

.no-access {
  alignment-x: center;
  top: 50vh;
  text-color: dark_red;
}

.stats-update-btn {
  bottom: 3;
  right: 3;
  height: 16;
  width: fit-content;
  padding-left: 2;
  padding-right: 2;
}

.gridWidget-overview {
  top: 30;
  left: 0;
  height: fit-content;
  width: 100%;
  tiles-per-line: 4;
  tile-height: 75;
}

Scroll {
   top: 5;
   width: 100%;
   height: 90%;

   .gridWidget-stats {
     top: 30;
     left: 0;
     height: fit-content;
     width: 100%;
     tiles-per-line: 5;
     tile-height: 130;
   }

   Scrollbar {
      left: 0;
      top: 0;
      width: 5;
      height: 100%;
      margin-right: 5;
   }
}

Overview {
  .entryIcon {
    alignment-x: center;
    top: 0;
    height: 20;
    width: 20;
  }
  .entryTitle {
    alignment-x: center;
    top: 30%;
  }
}

Stats {
  .entryIcon {
      alignment-x: center;
      top: 0;
      height: 35%;
      width: 99%;
    }
    .entryTitle {
      alignment-x: center;
      top: 40%;
    }
}